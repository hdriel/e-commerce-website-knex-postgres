{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "start:db": "npm run stop:db && docker-compose -f docker-compose.infra.yaml up",
    "stop:db": "docker-compose -f docker-compose.infra.yaml down",
    "start:server": "node ./dist/server.js",
    "start:server-dev": "nodemon ./dist/server.js",
    "dev": "set \"NODE_ENV=local\" && concurrently \"npm run build:watch\" \"npm run start:server-dev\"",
    "knex:migrate:make:migration": "knex --knexfile dist/database/db_knex.js -x js migrate:make create-user-tabel",
    "knex:migrate:latest": "knex --knexfile dist/database/db_knex.js migrate:latest",
    "knex:migrate:rollback": "knex --knexfile dist/database/db_knex.js migrate:rollback",
    "knex:migrate:make:seed": "knex --knexfile dist/database/db_knex.js seed:make 01_user",
    "knex:migrate:run-seed": "knex --knexfile dist/database/db_knex.js seed:run"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "knex": "^0.95.6",
    "pg": "^8.6.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/knex": "^0.16.1",
    "@types/node": "^15.3.0",
    "concurrently": "^6.1.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
