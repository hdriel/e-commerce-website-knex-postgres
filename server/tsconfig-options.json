{
    "compilerOptions": {
      "sourceMap": true,
      "removeComments": true,
      "preserveSymlinks": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "types": ["node", "jest"],
    },
}
